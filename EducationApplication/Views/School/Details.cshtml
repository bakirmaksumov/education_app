@model EducationApplication.ViewModel.ViewModels.School.SchoolVM 

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EducationLayout.cshtml";
}

<div class="row mrg-top30">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>School View</h5>
            </div>
            <div class="card-body">
                <!--tables-->
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>@Html.DisplayNameFor(model => model.Name):</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">@Model.Name</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>@Html.DisplayNameFor(model => model.Street):</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">@Model.Street</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>@Html.DisplayNameFor(model => model.BuildingType):</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">
                                @if (@Model.BuildingType == "3")
                                { <p class="padding-top20">Education</p>}
                            </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>@Html.DisplayNameFor(model => model.Id):</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">@Model.Id</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>@Html.DisplayNameFor(model => model.BuildingStatus):</b></label>
                        <div class="col-md-3">
                            @if (@Model.BuildingStatus == "2")
                            {<p class="padding-top20" style="color:green">Active</p>}
                            else
                            {<p class="padding-top20" style="color:red">Inactive</p>}
                        </div>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <input type="reset" name="cancel" class="btn btn-danger btn-md" style="float:right" value="Close">
                </div>
                <!----->
            </div>
            <!---->
        </div>
    </div>
</div>