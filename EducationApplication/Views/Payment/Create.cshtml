@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EducationLayout.cshtml";
}

<div class="row mrg-top30">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Create Payment</h5>
            </div>
            <div class="card-body">
                <!--tables-->
                <div class="form-inline">
                    <div class="col-md-12 form-group mrg-top10">
                        <label class="col-md-3 control-label" for="Title"><b>Student Name:</b></label>
                        <select class="col-md-6 form-control">
                            <option>--Select--</option>
                        </select>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group mrg-top10">
                        <label class="col-md-3 control-label" for="Title"><b>School Name:</b></label>
                        <select class="col-md-6 form-control">
                            <option>--Select--</option>
                            <option>Example1</option>
                            <option>Example2</option> 
                        </select>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group mrg-top10">
                        <label class="col-md-3 control-label" for="Title"><b>Amount:</b></label>
                        <div class="col-md-3">
                            <input class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="custom-control custom-radio offset-md-3 col-md-3 mrg-top10">
                        <input type="radio" class="custom-control-input" id="defaultUnchecked" name="defaultExampleRadios">
                        <label class="custom-control-label" for="defaultUnchecked">Cash</label>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="custom-control custom-radio offset-md-3 col-md-3 mrg-top10">
                        <input type="radio" class="custom-control-input" id="defaultUnchecked" name="defaultExampleRadios">
                        <label class="custom-control-label" for="defaultUnchecked">Card</label>
                    </div>
                </div>
            </div>
                
                <hr />
                <div class="form-group">
                    <input type="reset" name="create" class="btn btn-success btn-md" @*style="float:right"*@ value="Create">
                    <input type="reset" name="cancel" class="btn btn-danger btn-md" @*style="float:right"*@ value="Close">
                </div>
                <!----->
            </div>
            <!---->
        </div>
    </div>
