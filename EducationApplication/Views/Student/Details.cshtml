@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_EducationLayout.cshtml";
}
<div class="row mrg-top30">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Student View</h5>
            </div>
            <div class="card-body">
                <!--tables-->
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Student ID:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">0021</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Name:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">Alex</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Surname:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">Fergusen</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Date of Birth:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">1996.01.02</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Email address:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">test@gmail.com</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Passport Number:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20">AA00012B</p>
                        </div>
                    </div>
                </div>
                <div class="form-inline">
                    <div class="col-md-12 form-group">
                        <label class="col-md-3 control-label" for="Title"><b>Status:</b></label>
                        <div class="col-md-3">
                            <p class="padding-top20" style="color:green">Active</p>
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <input type="reset" name="cancel" class="btn btn-danger btn-md" style="float:right" value="Close">
                </div>
                <!----->
            </div>
            <!---->
        </div>
    </div>
</div>
