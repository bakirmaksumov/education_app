@model EducationApplication.ViewModel.ViewModels.Certificate.CertificatesVM
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Views/Shared/_EducationLayout.cshtml";
}
<link href="~/lib/fonts/font-awesome.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/moment.min.js"></script>
<script src="~/lib/bootstrap/dist/js/tempusdominus-bootstrap-4.min.js"></script>
<link href="~/lib/bootstrap/dist/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div class="row mrg-top30">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Assign Certificate</h5>
                </div>
                <div class="card-body">
                    <!--tables-->
                    <div class="form-inline">
                        <div class="col-md-12 form-group mrg-top10">
                            <label class="col-md-3 control-label" for="Title"><b>Student Name:</b></label>
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.UserID, ViewBag.StudentsList as List<SelectListItem>, "--------- Select Student ---------", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="col-md-12 form-group mrg-top10">
                            <label class="col-md-3 control-label" for="Title"><b>School Name:</b></label>
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.SchoolId, ViewBag.SchoolList as List<SelectListItem>, "--------- Select School ---------", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.SchoolId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="col-md-12 form-group mrg-top10">
                            <label class="col-md-3 control-label" for="Title"><b>Certificate Type:</b></label>
                            <div class="col-md-6">
                                @Html.DropDownListFor(m => m.CertificateTypeId, ViewBag.CertificateTypeslist as List<SelectListItem>, "--------- Select Certificate Type ---------", new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.CertificateTypeId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="col-md-12 form-group mrg-top10">
                            <label class="col-md-3 control-label" for="Title"><b>Registration Number:</b></label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(m => m.RegistrationNumber, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.RegistrationNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-inline">
                        <div class="col-md-12 form-group mrg-top10">
                            <label class="col-md-3 control-label" for="Title"><b>Due Date:</b></label>
                            <div class="col-md-6">
                                <div class="input-group date" id="datetimepicker1" data-target-input="nearest">
                                    @Html.TextBoxFor(m => m.DueDate, new { @class = "form-control datetimepicker-input", data_target = "#datetimepicker1" })
                                    <div class="input-group-append" data-target="#datetimepicker1" data-toggle="datetimepicker">
                                        <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                                @Html.HiddenFor(m=>m.StatusID)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" name="create" class="btn btn-success btn-md" value="Assign">
                        <input type="reset" name="cancel" class="btn btn-danger btn-md" onclick="history.back()" value="Close">
                    </div>
                </div>
                <!----->
            </div>
            <!---->
        </div>
    </div>
}
@*<script src="~/lib/bootstrap/dist/js/tempusdominus-bootstrap-4.min.js"></script>*@
@*<script src="~/lib/bootstrap/dist/js/bootstrap-datepicker.js"></script>*@
<script>
    $(document).ready(function () {
        $('#datetimepicker1').datetimepicker();
</script>